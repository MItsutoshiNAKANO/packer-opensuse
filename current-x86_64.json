{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<enter>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh -O /tmp/install.sh ; chmod +x /tmp/install.sh ; /tmp/install.sh<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "007654f3f18da66f761611c1e645fca2fb194c5b",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.xmission.com/archlinux/iso/2014.05.01/archlinux-2014.05.01-dual.iso",
      "net_device": "virtio-net",
      "output_directory": "output/archlinux-current-x86_64-qemu/",
      "qemuargs": [
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/archlinux-current-x86_64-qemu/archlinux-current-x86_64.raw"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ]
      ],
      "shutdown_command": "systemctl poweroff",
      "ssh_password": "build",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "archlinux-current-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/time.sh",
        "scripts/ssh.sh",
        "scripts/user.sh",
        "scripts/clean.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "strip",
      "keep_input_artifact": false,
      "output": "output/archlinux-current-x86_64-strip/"
    },
    {
      "type": "compress",
      "format": "gzip",
      "keep_input_artifact": false,
      "output": "output/archlinux-current-x86_64-compress/"
    }
  ]
}
