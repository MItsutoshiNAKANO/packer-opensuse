{
  "variables": {
    "DESTDIR": "{{env `DESTDIR`}}",
    "name": "opensuse-leap-x86_64"
  },
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><enter><wait>",
        " linux netdevice=eth0 netsetup=dhcp lang=en_US hostname=build <wait>",
        " install=http://mirror.yandex.ru/opensuse/distribution/leap/42.1/repo/oss/ <wait>",
        " autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/autoinst-leap.xml",
        " textmode=1 insecure=1<wait><enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "disk_compression": true,
      "iso_skip_cache": true,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [ "http://mirror.yandex.ru/opensuse/distribution/leap/42.1/iso/openSUSE-Leap-42.1-DVD-x86_64.iso" ],
      "net_device": "virtio-net",
      "output_directory": "output/{{user `name`}}-qemu",
      "machine_type": "q35",
      "qemuargs": [
        [
          "-m",
          "1280"
        ]
      ],
      "shutdown_command": "systemctl poweroff",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "{{user `name`}}"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/cloudinit.sh",
        "scripts/cloudagent.sh"
      ],
      "type": "shell"
    },
    {
      "type": "file",
      "source": "files/80-hotplug-cpu-mem.rules",
      "destination": "/etc/udev/rules.d/80-hotplug-cpu-mem.rules"
    },
    {
      "type": "file",
      "source": "files/goss.yaml",
      "destination": "/tmp/goss.yaml"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/goss.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "checksum",
        "output": "output/{{user `name`}}-qemu/{{user `name`}}.md5sums"
      },
      {
        "type": "manifest",
        "output": "output/{{user `name`}}-qemu/{{user `name`}}.manifest",
        "strip_path": true
      },
      {
        "type": "artifice",
        "files": [
          "output/{{user `name`}}-qemu/*"
        ]
      },
      {
        "type": "shell-local",
        "inline": [
          "DESTDIR={{user `DESTDIR` }}; mkdir -p ${DESTDIR:-images}; mv $1 ${DESTDIR:-images}/"
        ]
      }
    ]
  ]
}

