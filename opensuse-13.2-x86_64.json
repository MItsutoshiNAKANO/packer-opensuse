{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netsetup=dhcp lang=en_US hostname=build  netdevice=eth0",
        " autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/autoinst-13.2.xml",
        " textmode=1 insecure=1<wait><enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "disk_compression": true,
      "iso_skip_cache": true,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [ "http://mirror.yandex.ru/opensuse/distribution/13.2/iso/openSUSE-13.2-DVD-x86_64.iso" ],
      "net_device": "virtio-net",
      "output_directory": "output/opensuse-13.2-x86_64-qemu",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "768"
        ]
      ],
      "shutdown_command": "systemctl poweroff",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "opensuse-13.2-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell"
    },
    {
      "type": "file",
      "source": "files/80-hotplug-cpu-mem.rules",
      "destination": "/etc/udev/rules.d/80-hotplug-cpu-mem.rules"
    }
  ]
}
